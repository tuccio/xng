#version 450

layout (binding = 0) buffer bPerObject
{
	mat4 viewMatrix;
	mat4 viewProjectionMatrix;
	vec4 color;
}; 

#xng section(vertex)
//#xng ubervar("XNG_NORMAL_MAP")
//#xng ubervar("XNG_LIGHT_TYPE": "XNG_DIRECTIONAL", "XNG_SPOTLIGHT")

layout(location = 0) in vec3 position;

void main()
{
	gl_Position = vec4(position, 1);
}

#xng section(fragment)

void main()
{
	gl_FragColor = color;
}
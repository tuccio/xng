cbuffer cbPerObject : register(b0)
{
	float4x4 viewMatrix;
	float4x4 viewProjectionMatrix;
	float4   color;
};

#xng section(vertex:main_vs)

float4 main_vs(float3 position : POSITION) : SV_Position
{
	return mul(float4(position, 1), viewProjectionMatrix);
}

#xng section(pixel:main_ps)

float4 main_ps(float4 position : SV_Position) : SV_Target0
{
	return color;
}